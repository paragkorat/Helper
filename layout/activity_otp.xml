<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_otp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_back_arrow"/>

    <TextView
        android:id="@+id/txtotp1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_arrow"
        android:text="Enter the 6-digit code sent to you at"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtotp1"
        android:textColor="@android:color/black"
        android:paddingTop="5dp"
        android:paddingLeft="20dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <LinearLayout
        android:id="@+id/otp_box_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:gravity="center_horizontal"
        android:layout_below="@id/txt_email"
        >

    <EditText
        android:id="@+id/edt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:paddingBottom="15dp"
        android:paddingEnd="20dp"
        android:layout_margin="5dp"
        android:maxLength="1"
        android:hint="0"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="@drawable/new_shape"/>
    <EditText
        android:id="@+id/edt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:paddingBottom="15dp"
        android:paddingEnd="20dp"
        android:layout_margin="5dp"
        android:selectAllOnFocus="true"
        android:maxLength="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="@drawable/new_shape"/>
    <EditText
        android:id="@+id/edt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:selectAllOnFocus="true"
        android:paddingBottom="15dp"
        android:paddingEnd="20dp"
        android:layout_margin="5dp"
        android:maxLength="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="@drawable/new_shape"/>
    <EditText
        android:id="@+id/edt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:paddingTop="15dp"
        android:selectAllOnFocus="true"
        android:paddingStart="20dp"
        android:paddingBottom="15dp"
        android:paddingEnd="20dp"
        android:layout_margin="5dp"
        android:maxLength="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="@drawable/new_shape"/>
    <EditText
        android:id="@+id/edt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:paddingBottom="15dp"
        android:paddingEnd="20dp"
        android:layout_margin="5dp"
        android:selectAllOnFocus="true"
        android:maxLength="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="@drawable/new_shape"/>
    <EditText
        android:id="@+id/edt6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0"
        android:inputType="number"
        android:paddingTop="15dp"
        android:paddingStart="20dp"
        android:selectAllOnFocus="true"
        android:paddingBottom="15dp"
        android:paddingEnd="20dp"
        android:layout_margin="5dp"
        android:maxLength="1"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:background="@drawable/new_shape"/>


</LinearLayout>
    <TextView
        android:id="@+id/error_otp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="20dp"
        android:textColor="@color/red"
        android:visibility="gone"
        android:text="The Email passcode you've entered is incorrect."
        android:layout_below="@+id/otp_box_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:id="@+id/text_trouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="i'm having trouble"
            android:textSize="15sp"
            android:padding="20dp"
            android:textColor="@color/green"
            />
        <Button
            android:id="@+id/btn_submit"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/green"
            android:text="Next"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="normal" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/my_view"
        android:background="@color/colorAzur"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/resend_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend to"
            android:textColor="@android:color/black"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txt_email2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:paddingTop="5dp"
            android:paddingStart="20dp"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/textForOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How would you like to receive your code?"
            android:textColor="@android:color/black"
            android:paddingTop="5dp"
            android:paddingLeft="20dp"
            android:textSize="12sp"/>
        <Button
            android:id="@+id/btn_resend_code"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_resend_btn"
            android:text="Resend code"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_margin="20dp"/>
        <Button
            android:id="@+id/btn_cancel"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/black"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />

    </LinearLayout>

</RelativeLayout>
