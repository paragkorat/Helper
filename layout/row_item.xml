<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:padding="10dp">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:elevation="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_resend_btn"
        android:layout_margin="5dp"
        android:padding="10dp">
        <TextView
            android:id="@+id/title_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title_requirement"
            android:textColor="@color/border" />
        <TextView
            android:id="@+id/serviceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="serviceName"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_name"
            android:textStyle="bold"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/sub_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sub_service"
            android:textColor="@color/border" />
        <TextView
            android:id="@+id/title_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title_address"
            android:textStyle="bold"
            android:textColor="@android:color/black" />
        <TextView
            android:id="@+id/user_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="user_address"
            android:textColor="@color/border" />
    </LinearLayout>
</android.support.v7.widget.CardView>

</LinearLayout>
